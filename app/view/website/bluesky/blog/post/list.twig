<div class="ui stackable equal height stackable grid">
	<div class="three column row">

{% for i in posts.rows|sort|reverse %}

		<div class="column">
			<a href="{{ _url.base|trim('/') }}{% if i._url %}{{ i._url }}{% else %}blog/post/{{ i.id }}{% endif %}" title="click to read full article">
				<p><img src="{% if i.featured_image %}{{ imgTsUrl(i.featured_image.reference, 350) }}{% else %}/app/website/bluesky/img/_sui/image.png{% endif %}" class="resp fullshadow" alt="" /></p>
				<div class="ui medium header">
					{{ i.title }}
					<small class="small60"><time pubdate datetime="{% if i.date and i.date != 0000-00-00 %}{{ i.date|date("jS F Y") }}{% endif %}">{% if i.date and i.date != 0000-00-00 %}{{ i.date|date("jS F Y") }}{% endif %}</time></small>
				</div>
				<p>{% if i.summary %}{{ i.summary|truncate(80,true,' ..') }}{% else %}{{ i.description|raw|striptags|truncate(80,true,' ..')|replace({'&nbsp;':' '}) }}{% endif %}</p>
			</a>
		</div>

{% endfor %}

	</div>
</div><!-- /.ui.stackable.equal.height.stackable.grid -->


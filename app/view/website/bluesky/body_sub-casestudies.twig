
<div class="emspace h20 floatc"></div>

<div class="ui form">
	<div class="ui field">
		<label>Filter case studies by:</label>

<select name="casestudies" multiple="" class="casestudies ui dropdown selection multiple">
<option value="">All</option>
{% set tag = getDirectoryCategoryData() %}
{% for opt in tag.items %}
<option value="{{ opt._tag }}" id="cscat-{{ opt.id }}">{{ opt._tag }}</option>
{% endfor %}
</select>

	</div>
</div>
<div class="emspace h20 floatc"></div>



<div class="ui four doubling link cards">

{% set list = getDirectoryCategoryData() %}
{% for ditm in list.items %}

	<a class="card" href="{% if ditm._url %}{{ ditm._url }}{% else %}directory/item/view/{{ ditm.id }}{% endif %}" title="Find out more about {{ ditm.name }}">
		<div class="image">
			<img src="{% if ditm.featured_image_id %}{{ imgTsUrl(ditm.featured_image_id, 300) }}{% else %}/app/website/bluesky/img/logos/{% if ditm.id == 1 %}epicuest{% elseif ditm.id == 2 %}schoolzine{% elseif ditm.id == 3 %}dccm{% elseif ditm.id == 4 %}oshclub{% elseif ditm.id == 5 %}goldfields{% elseif ditm.id == 6 %}busbee{% elseif ditm.id == 10 %}timecontisheffield{% elseif ditm.id == 11 %}norupwilson{% else %}_blank{% endif %}.png{% endif %}">
		</div>
		<div class="content">
			<div class="header">{{ ditm.name }}</div>
			<div class="meta">{{ ditm._tag }}</div>
			<div class="description">{{ ditm.title }}</div>
		</div>
	</a><!-- /.card -->

{% endfor %}

</div><!-- /ui.four.stackable.link.cards -->


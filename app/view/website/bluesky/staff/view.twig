
<section id="stview">

<div class="ui stackable grid">
	<div class="five wide column">

		<div class="ui special centered card">
			<div class="blurring dimmable image">
				<div class="ui dimmer"><div class="content"><div class="center"><span class="ui inverted button dopop" onclick="gtag('event','Secondary Image',{'event_category':'Staff page','event_label':'{{ item.name }}'});">more</span></div></div></div>
				<img src="{{ imgUrl(item.featured_image.reference,300) }}" alt="{{ item.name }}, {{ item.title }} | BlueSky Perth Custom Web + App Development">
			</div><!-- /.blurring.dimmable.image -->
			<div class="content">
				<div class="header">{{ item.name }}</div>
				<div class="meta">{{ item.title }}</div>
			</div><!-- /.content -->
{% if item.social %}
			<div class="extra content">
				<a href="{{ item.social }}" onclick="gtag('event','LinkedIn',{'event_category':'Staff page','event_label':'{{ item.name }}'});" target="_blank" rel="noopener noreferrer"><i class="linkedin icon"></i> Connect with {{ item.name|split(' ')|slice(0,1)|join }} on LinkedIn</a>
			</div><!-- /.extra.content -->
{% endif %}
		</div><!-- /.card -->

		<div class="ui basic modal dapop">
			<i class="close icon"></i>
			<div class="content">
				<div class="center">
					<div class="ui image">
						<img src="{% if item.featured_image_secondary %}{{ imgUrl(item.featured_image_secondary.reference) }}{% else %}{{ imgUrl(item.featured_image.reference) }}{% endif %}" class="resp" alt="{{ item.name }}" />
					</div><!-- /.ui.image -->
				</div><!-- /.center -->
			</div><!-- /.content -->
		</div><!-- /.ui.basic.modal -->

	</div><!-- /.column -->
	<div class="eleven wide column">

<h2 class="ui header">
	<img class="ui big circular image dopop" src="/_image/media/{% if item.id == 1 %}44/amel-holic{% elseif item.id == 2 %}43/rizal-farok{% elseif item.id == 3 %}45/tim-robinson{% elseif item.id == 4 %}51/jose-charango{% elseif item.id == 5 %}47/ben-hewitt{% elseif item.id == 6 %}48/parham-bakhtiari{% endif %}_smsq.jpg">
	<div class="content">
		{{ item.name }}
		<div class="sub header">{{ item.title }}</div>
	</div><!-- /.content -->
</h2>
<div class="ui divider afterheader floatc"></div>

{{ renderContent(item.description)|raw }}

	</div><!-- /.column -->
</div><!-- /.ui.grid -->

<div class="emspace h80 floatc"></div>
<h4 class="ui horizontal divider header nomargin"><i class="users icon"></i></h4>

<div class="ui four doubling centered cards notransform">

{% set staffsList = getAllStaff() %}
{% for staff in staffsList %}
{% if staff.is_active and staff.id != item.id %}

	<a class="card tiny" href="{% if staff._url %}{{ staff._url }}{% else %}/staff/view/{{ staff.id }}{% endif %}" title="View {{ staff.name }}'s profile">
		<div class="image">
			<img class="resp" src="/_image/media/1/_image.png" data-src="{% if staff.featured_image %}{{ imgUrl(staff.featured_image.reference,400) }}{% else %}/_image/media/1/_image.png{% endif %}" alt="{{ staff.name }} | BlueSky Perth Custom Web + App Development">
		</div>
		<div class="content">
			<div class="header">{{ staff.name }}</div>
			<div class="meta">{{ staff.title }}</div>
		</div>
	</a><!-- /.card -->

{% endif %}
{% endfor %}

</div><!-- /.ui.four.doubling.centered.cards -->

<div class="emspace h80 floatc"></div>
<h4 class="ui horizontal divider header nomargin"><i class="file alternate icon"></i></h4>
<section id="subnav">
<div class="ui four doubling centered cards">
{% set subnav = buildNav(1, 4) %}
{% for i in subnav %}
{% if i.is_navigation %}
	<a class="card tiny" href="{{ i._url }}" title="{{ i.title }}">
		<div class="content">
			<img class="left floated mini ui image" src="/_image/media/1/_image.png" data-src="{% if i.featured_image %}{{ imgUrl(i.featured_image.reference,60) }}{% else %}/_image/media/1/_image.png{% endif %}" alt="{{ i.title }} | BlueSky Perth Custom Web + App Development">
			<div class="header spnav">{{ i.title }}</div>
			<div class="description">{% if i.summary %}{{ i.summary|striptags|truncate(54,true,' ..') }}{% else %}{{ i.description|raw|striptags|truncate(54,true,' ..') }}{% endif %}</div>
		</div>
	</a><!-- /.card -->
{% endif %}
{% endfor %}
</div><!-- /.ui.five.doubling.centered.cards -->
</section><!-- /#subnav -->

</section><!-- /#stview -->


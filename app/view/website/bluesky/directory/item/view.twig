
<div class="ui piled segment center huge">
	<h2 class="ui header">{{ item.title }}</h2>
	<p>{{ item.summary }}</p>
</div>

<div class="ui medium right floated image">
	<div class="ui card">
		<div class="image">
			<img src="{% if item.featured_image %}{{ imgTsUrl(item.featured_image.reference, 300) }}{% else %}/app/website/bluesky/img/_sui/image.png{% endif %}">
		</div>
		<div class="content">
			<div class="header">{{ item.name }}</div>
			<div class="meta"><span class="date">Sector: {{ item.type }}</span></div>
			<div class="description">{{ item.company }}</div>
		</div>
{% if item.id != 4 and item.id != 7 and item.id != 10 %}
<div class="extra content">
<span>
<i class="calendar alternate outline icon"></i>
Established
{% if item.id == 1 or item.id == 2 %}in 2007
{% elseif item.id == 3 %}in 2010
{% elseif item.id == 5 %}in 2016
{% elseif item.id == 6 %}for 65+ years
{% elseif item.id == 8 %}for 50 years
{% elseif item.id == 9 %}in 1952
{% endif %}
</span>
</div><!-- /.extra.content -->
{% endif %}
	</div>
</div><!-- /.ui.medium.right.floated.image -->

